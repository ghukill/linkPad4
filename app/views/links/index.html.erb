<p id="notice"><%= notice %></p>



<h1>Listing Links</h1>

<!-- beginnings of search -->
<%= form_tag search_links_path, :method => :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %> <%= submit_tag "Search" %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Html</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%= link.URL %></td>
        <td><%= link.html %></td>
        <td><%= link_to image_tag(link.screenshot.url(:thumb)), link.screenshot.url(:original) %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>


